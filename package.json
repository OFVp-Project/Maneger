{
  "name": "@ofvp_project/daemon",
  "version": "4.1.0",
  "description": "daemon for managing and communicating with other servers.",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "test": "node testProject.js"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ext": "json,js,ts",
    "watch": [
      "src/*",
      "package.json",
      "package-lock.json",
      "Dockerfile",
      "docker-compose.yml"
    ],
    "env": {
      "NODE_ENV": "development",
      "COOKIE_SECRET": "dev",
      "PASSWORD_ENCRYPT": "aaaaa",
      "DAEMON_PASSWORD": "",
      "DAEMON_USER": ""
    },
    "exec": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OFVp-Project/DeamonManeger.git"
  },
  "keywords": [
    "ofvp_project",
    "api"
  ],
  "author": "ofvp_project",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/OFVp-Project/DeamonManeger/issues"
  },
  "homepage": "https://github.com/OFVp-Project/DeamonManeger#readme",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cron": "^2.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "ip-matching": "^2.1.2",
    "mongoose": "^6.3.5",
    "netmask": "^2.0.2",
    "pm2": "^5.2.0",
    "qrcode": "^1.5.0",
    "session-file-store": "^1.5.0",
    "socket.io": "^4.5.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.41",
    "@types/session-file-store": "^1.2.2",
    "axios": "^0.27.2",
    "nodemon": "^2.0.16"
  }
}
